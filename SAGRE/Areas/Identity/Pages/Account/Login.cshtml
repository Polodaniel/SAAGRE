@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<link href="~/css/CSSReset.css" rel="stylesheet">
<link href="~/css/Estilos.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/materialize/css/materialize.css">
<link rel="stylesheet" href="~/lib/BootstrapArquivos/bootstrap.min.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<html>
<body class="container bg-light">
    <div class="row cardLogin">
        <div class="col-sm-6 col-6 col-md-6 col-lg-6 small mt-5">
            <div class="margin_center">
                <img src="~/images/Logo1.png" class="ml-2" alt="Alternate Text" />
            </div>
            <section class="small">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="card z-depth-5 tamanhoCardLogin">
                        <div class="card-body pt-2 pb-0">
                            <div class="form-group mt-0">
                                <div class="input-field">
                                    <i class="material-icons prefix tiny">lock_outline</i>
                                    <input id="email" type="email" class="validate" asp-for="Input.Email">
                                    <label for="email">E-mail</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="input-field">
                                    <i class="material-icons prefix">vpn_key</i>
                                    <input id="password" type="password" class="validate" asp-for="Input.Password">
                                    <label for="password"> Senha</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="small">
                                            <label asp-for="Input.RememberMe">
                                                <input type="checkbox" class="filled-in tiny" asp-for="Input.RememberMe" />
                                                <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group text-right">
                                            <button class="btn" style="background-color:#5bc0de ;" type="submit" name="action">
                                                Logar-se
                                                <i class="material-icons right">exit_to_app</i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                @*<a asp-page="./ForgotPassword">Esqueceu sua senha?</a>*@Esqueceu sua senha? |
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma Nova Conta</a> @*Criar uma Nova Conta*@
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>

</body>
</html>

